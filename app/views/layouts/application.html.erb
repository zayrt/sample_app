<!DOCTYPE html>
<html>
 <head>
   <title><%= titre %></title>
   <%= csrf_meta_tags %>
   <%= render 'layouts/stylesheets' %>
   <%= javascript_include_tag "application" %>
 </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <% flash.each do |key, value| %>
      <div class="<%= key %>"><%= value %></div>
      <% end %>
      <section class="round">
	<%= yield %>
      </section>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
