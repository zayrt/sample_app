<header>
  <%= image_tag("ruby2.png", :alt => "Application exemple", :class => "round") %>
  <nav class="round">
    <ul>
      <li><%= link_to "Accueil", root_path %></li>
      <li><%= link_to "Aide", help_path  %></li>
      <% if signed_in? %>
      <li> <%= link_to "Users", users_path %> </li>
      <li id="fat-menu" class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Account <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Profil", current_user %></li>
          <li><%= link_to  "Setting", edit_user_path(current_user) %></li>
          <li class="divider"></li>
          <li>
            <%= link_to "Deconnexion", signout_path, method: "delete" %>
          </li>
        </ul>
      </li>
      <% else %>
      <li><%= link_to "Connexion", new_session_path %></li>
      <% end %>
    </ul>
  </nav>
